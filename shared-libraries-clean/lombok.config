# Lombok configuration for Exalt Ecosystem Shared Libraries
# This file configures Lombok behavior project-wide

# Use 'log' as the logger field name for @Slf4j and other logging annotations
lombok.log.fieldName = log

# Add @Generated annotation to all Lombok-generated code
# This helps with code coverage tools
lombok.addLombokGeneratedAnnotation = true

# Add constructor properties for better JSON/Jackson integration
lombok.anyConstructor.addConstructorProperties = true

# Suppress warnings for @NonNull on parameters
lombok.nonNull.exceptionType = IllegalArgumentException

# Don't call super toString/equals/hashCode by default
lombok.equalsAndHashCode.callSuper = call

# Exclude static fields from toString by default
lombok.toString.includeFieldNames = true

# Don't generate FindBugs annotations (they may not be available)
lombok.extern.findbugs.addSuppressFBWarnings = false